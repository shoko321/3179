{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "World Happiness from 2015 to 2022",
      "fontSize": 20
    },
    "width": 1100,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "Year_Selection",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2022,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/shoko321/3179/main/data_vis2/ne_50m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "not_available"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "not_available"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/shoko321/3179/main/data_vis2/world-happiness-report-for-map",
          "format": {"type": "csv"}
        },
        "transform": [
          {
            "lookup": "Country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {"filter": "datum.Year == Year_Selection"}
        ],
  
        "layer": [
          {
            "params": [
              {
                "name": "highlight",
                "select": {
                  "type": "point",
                  "encodings": ["shape"],
                  "on": "mouseover",
                  "clear": "mouseout"
                }
              }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {
                "field": "Happiness",
                "type": "ordinal",
                "scale": {
                  "type": "linear",
                  "domain": ["Very High", "High", "Medium", "Low", "Very Low"],
                  "range": ["#FB0081", "#FB3299", "#FB64B2", "#FB97CA", "#FBC9E3"]
                },
                "legend": {
                  "titleFontSize": 15,
                  "labelFontSize": 12
                }
              },
              "tooltip": [
                {"field": "Country", "type": "nominal", "title": "Country"},
                {"field": "GDP per Capita category", "type": "nominal", "title": "GDP per Capita"},
                {"field": "Social Support category", "type": "nominal", "title": "Social Support"},
                {"field": "Health category", "type": "nominal", "title": "Health"},
                {"field": "Freedom category", "type": "nominal", "title": "Freedom"},
                {"field": "Government Trust category", "type": "nominal", "title": "Government Trust"},
                {"field": "Generosity category", "type": "nominal", "title": "Generosity"}
              ],
              "stroke": {
                "condition": {
                  "param": "highlight",
                  "empty": false,
                  "value": "white"
                }
              },
              "strokeWidth": {
                "condition": {
                  "param": "highlight", 
                  "empty": false, 
                  "value": 1.5},
                "value": 1.5
              }
            }
          },
          
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 325,
              "dy": 100,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "Oceanina"},
              "color": {"value": "black"}
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 0,
              "dy": -190,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "Europe"}, 
              "color": {"value": "black"}}
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 30,
              "dy": -40,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "Africa"},
              "color": {"value": "black"}
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": -310,
              "dy": -150,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "North America"},
              "color": {"value": "black"}
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 180,
              "dy": -90,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "South Asia"},
              "color": {"value": "black"}
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 100,
              "dy": -110,
              "fontSize": 17,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"value": "West Asia"},
              "color": {"value": "black"}
            }
          }
        ]
      }
    ]
  }